<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="easymed.usuario.PedidoRealizado"
    android:background="@drawable/wallpaper">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definir como padrão do Botão"
        android:id="@+id/definir_padrao"
        android:layout_marginBottom="220dp"
        android:background="@mipmap/button_bg"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/home_screen"
        android:background="@mipmap/button_bg"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/definir_padrao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@mipmap/ok"
        android:layout_above="@+id/definir_padrao"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
